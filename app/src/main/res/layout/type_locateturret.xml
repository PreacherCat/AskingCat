<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="题号"
        android:textSize="20sp"
        android:id="@+id/Locate_Positon"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="问题内容"
        android:textSize="25sp"
        android:layout_gravity="left"
        android:id="@+id/Locate_Text"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
          <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/Locate_body"
       android:src="@mipmap/body"
        android:scaleType="center"/>
        <com.tx.catcat.CustomView.LocateTurret
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/Locate_turret" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Locate_lastButton"
            android:text="上一项"
            android:layout_marginRight="45dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Locate_nextButton"
        android:text="下一项"/>
    </LinearLayout>
</LinearLayout>